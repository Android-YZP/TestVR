<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   
        <ImageView
        android:id="@+id/id_player_top_back_win"
        android:layout_width="@dimen/item_small_size"
        android:layout_height="@dimen/item_small_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_selector_player_full_back"
        android:contentDescription="snailgame" />
    
        
    <RelativeLayout
        android:id="@+id/id_relativelayout_small_controller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/controller_small_height"
        android:layout_alignParentBottom="true"
        android:background="#C0000000"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/id_imageview_play_pause_win"
            android:layout_width="@dimen/item_small_size"
            android:layout_height="@dimen/item_small_size"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector_player_pause_big"
            />

 		<ImageView 
 		    android:id="@+id/id_imageview_play_reload_win"
 		    android:layout_width="@dimen/item_small_size"
 		    android:layout_height="@dimen/item_small_size"
 		    android:layout_centerVertical="true"
 		    android:background="@drawable/btn_selector_player_refresh"
 		    android:layout_toRightOf="@id/id_imageview_play_pause_win"
 		    android:layout_marginStart="10dp"
 		    />       
       
        <ImageView
            android:id="@+id/id_imageview_toggle_screenwin"
            android:layout_width="@dimen/item_small_size"
            android:layout_height="@dimen/item_small_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector_player_full_small"
            />

    </RelativeLayout>

</RelativeLayout>
